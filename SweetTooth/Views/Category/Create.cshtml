@using SweetTooth.Models

@model Category
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm(actionName: "Create", controllerName: "Category", routeValues: null, method: FormMethod.Post, htmlAttributes: new { @class = "dashboard-form" }))
{
    <div>

        <div>
            @Html.LabelFor(m => m.CategoryName)
            @Html.TextBoxFor(m => m.CategoryName)
            @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
        </div>

        <div>
            <div>
                <input type="submit" value="Create" />
            </div>
        </div>

    </div>
}

